@model IEnumerable<SparkSide.Services.Data.Models.ChallengeDTO>

@using SparkSide.Common
@{
    this.ViewData["Title"] = "Challenges";
}

<div>
    <div class="page-title">
        <h3>@ViewData["Title"]</h3>
    </div>
</div>

<div class="card-results-container">
    @foreach (var challenge in Model)

    {
        <div class="mdl-card mdl-shadow--2dp">
            <div class="mdl-card__title mdl-card--expand" style=" background: url( @challenge.PictureLink ) center no-repeat">
                <h2 class="mdl-card__title-text">@challenge.Title</h2>
            </div>
            <div class="mdl-card__supporting-text">
                <span>@challenge.Description</span>
                <br />
                <a asp-controller="Users" asp-action="@challenge.Author.LoginName">@challenge.Author.FirstName @challenge.Author.LastName</a>
                @*<div class="bold-text">Days: @challenge.DurationDays</div>*@
            </div>
            <div class="mdl-card__actions mdl-card--border">
                <a class="mdl-button mdl-button--colored mdl-js-button mdl-js-ripple-effect"
                   asp-controller="Challenges" asp-action="Details" asp-route-id="@challenge.Id">
                    Details
                </a>
                <div class="float-right">
                    <i class="material-icons">date_range</i>
                    <span>@challenge.DurationDays</span>
                </div>
            </div>
            @*<div class="mdl-card__actions">
                    <a asp-controller="Challenges" asp-action="Details" asp-route-id="@challenge.Id">Details</a>
                </div>*@
        </div>
    }
</div>
