@using SparkSide.Common
@using SparkSide.Data.Models
@using Microsoft.AspNetCore.Identity
@inject SignInManager<ApplicationUser> SignInManager

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="~/css/material.css">
    <link rel="stylesheet" href="https://code.getmdl.io/1.3.0/material.pink-teal.min.css" />
    <link rel="stylesheet" href="~/css/custom-material.css">
    <link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons">
    <title>@this.ViewData["Title"] - @GlobalConstants.SystemName</title>
</head>
<body>
    <div class="mdl-layout mdl-js-layout mdl-layout--fixed-drawer
            mdl-layout--fixed-header">
        <header class="mdl-layout__header red-gradient">
            <div class="mdl-layout__header-row">
                <span class="mdl-layout-title full-logo">SPARKSIDE</span>
                <div class="mdl-layout-title small-logo">SS</div>
                <div class="mdl-layout-spacer"></div>
                <div class="mdl-textfield mdl-js-textfield mdl-textfield--expandable
                  mdl-textfield--floating-label mdl-textfield--align-right">
                    <label class="mdl-button mdl-js-button mdl-button--icon"
                           for="fixed-header-drawer-exp">
                        <i class="material-icons align-search">search</i>
                    </label>
                    <div class="mdl-textfield__expandable-holder">
                        <input class="mdl-textfield__input" type="text" name="sample"
                               id="fixed-header-drawer-exp">
                    </div>
                </div>
                <partial name="_LoginPartial" />
            </div>
        </header>
        @if (this.SignInManager.IsSignedIn(this.User))
        {
            <div class="mdl-layout__drawer custom-menu is-casting-shadow">
                <nav class="mdl-navigation">
                    <a class="mdl-navigation__link" asp-controller="Home" asp-action="Index"><i class="material-icons menu-icon">dashboard</i>Dashboard</a>
                    @if (this.User.IsInRole(GlobalConstants.TrainerRoleName))
                    {
                        <a class="mdl-navigation__link" href=""><i class="material-icons menu-icon">favorite_border</i>My Challenges</a>
                    }
                    <a class="mdl-navigation__link" asp-controller="Challenges" asp-action="Followed"><i class="material-icons menu-icon">navigate_next</i>Followed Challenges</a>
                    <a class="mdl-navigation__link" asp-controller="Challenges" asp-action="Saved"><i class="material-icons menu-icon">bookmark_border</i>Saved</a>
                    <a class="mdl-navigation__link" asp-controller="Explore" asp-action="AllChallenges"><i class="material-icons menu-icon">explore</i>Explore</a>
                    <a class="mdl-navigation__link" href="">About</a>
                </nav>
            </div>
        }
        @*<partial name="_CookieConsentPartial" />*@
        <main class="mdl-layout__content">
            <div class="page-content main-section">
                @this.RenderBody()
                <form id="__AjaxAntiForgeryForm" action="#" method="post"> @Html.AntiForgeryToken()</form>
            </div>
            <div class="right-section">
                @this.RenderSection("RightSection", required: false)
            </div>
        </main>
    </div>

    @*<footer class="border-top footer text-muted">
            <div class="container">
                &copy; @DateTime.Now.Year - @GlobalConstants.SystemName - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
            </div>
        </footer>*@

    <script src="~/lib/jquery/dist/jquery.min.js" asp-append-version="true"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js" asp-append-version="true"></script>
    <script src="~/lib/jquery-validation-unobtrusive/dist/jquery.validate.unobtrusive.min.js" asp-append-version="true"></script>
    <script src="~/js/site.min.js" asp-append-version="true"></script>
    <script src="~/js/material.min.js"></script>
    <script>
        $(document)
            .ajaxSend(function (event, jqxhr, settings) {
                if (settings.type.toUpperCase() != 'POST') {
                    return;
                }
                jqxhr.setRequestHeader("RequestVerificationToken", $('#__AjaxAntiForgeryForm input').val());
                console.log(jqxhr);
            });
    </script>
    @await this.RenderSectionAsync("Scripts", required: false)

</body>
</html>
