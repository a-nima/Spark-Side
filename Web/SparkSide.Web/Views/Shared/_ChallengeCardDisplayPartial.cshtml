@model SparkSide.Services.Data.Models.ChallengeDTO

<div class="mdl-card mdl-shadow--2dp">
    <div class="mdl-card__title mdl-card--expand" style=" background: url( @Model.PictureLink ) center no-repeat">
        <h2 class="mdl-card__title-text">@Model.Title</h2>
    </div>
    <div class="mdl-card__supporting-text">
        <span>@Model.Description</span>
        <br />
        <a asp-controller="Users" asp-action="@Model.Author.LoginName">@Model.Author.FirstName @Model.Author.LastName</a>
    </div>
    <div class="mdl-card__actions mdl-card--border">
        <a class="mdl-button mdl-button--colored mdl-js-button mdl-js-ripple-effect"
           asp-controller="Challenges" asp-action="Details" asp-route-id="@Model.Id">
            Details
        </a>
        <div class="float-right">
            <i class="material-icons">date_range</i>
            <span>@Model.DurationDays</span>
        </div>
    </div>
</div>