@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<center>
    <div class="mdl-card user-form mdl-shadow--2dp">
        <div class="user-form-header">
            <h3>@ViewData["Title"]</h3>
        </div>
        <div id="register" class="col s12">
            <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
                <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
                    <label class="mdl-textfield__label" asp-for="Input.Email">Email</label>
                    <input class="mdl-textfield__input" asp-for="Input.Email" type="email">
                    <span class="textfield__error" asp-validation-for="Input.Email"></span>
                </div>
                <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
                    <label class="mdl-textfield__label" asp-for="Input.Password">Password</label>
                    <input class="mdl-textfield__input" asp-for="Input.Password" type="password" class="validate">
                    <span class="textfield__error" asp-validation-for="Input.Password"></span>
                </div>
                <center>
                    <button class="mdl-button--colored mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect" type="submit" name="action">Log in</button>
                    <br>
                    <br>
                    <div class="form-group">
                        <div class="checkbox">
                            <label class="mdl-checkbox mdl-js-checkbox mdl-js-ripple-effect" asp-for="Input.RememberMe">
                                <input type="checkbox" asp-for="Input.RememberMe" class="mdl-checkbox__input" checked>
                                <span class="mdl-checkbox__label">@Html.DisplayNameFor(m => m.Input.RememberMe)</span>
                            </label>
                        </div>
                        <br />
                        <br />
                        <p>
                            <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Register</a>
                        </p>
                    </div>
                </center>
            </form>
        </div>
    </div>
</center>


